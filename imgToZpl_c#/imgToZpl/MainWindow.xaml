<Window x:Class="imgToZpl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imgToZpl"
        mc:Ignorable="d"
        Title="imgToZpl" Height="448.391" Width="587.339">
    <Grid>
        <Button x:Name="convertImg" Content="转换" HorizontalAlignment="Left" Margin="309,6,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="23" Background="#FF2CB878"/>
        <Label Content="zpl代码：" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="102"/>
        <TextBox x:Name="zplCode" HorizontalAlignment="Left" Height="334" Margin="11,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  VerticalScrollBarVisibility="Visible" Width="558" IsReadOnly="True" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="selectImg" Content="选择图片" HorizontalAlignment="Left" Margin="217,6,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Height="23" Background="#FF3875E0"/>
        <TextBox x:Name="imgPath" HorizontalAlignment="Left" Height="23" Margin="11,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" IsReadOnly="True" TextChanged="imgPath_TextChanged"/>
    </Grid>
</Window>
